.projects {
  color: #9099a3;

	ul li {
    padding: 10px;
    margin: 10px 0;
    position: relative;
    font-size: 1.2em;
    cursor: pointer;

    a {
      color: #dd4a38;
      font-size: 1.3em;
    }

    &.selected {
      background: #e1e3e5;
      width: 102%;
      color: #5d6670;
    }
  }

  h1 {
    font-size: 2em;
    border-bottom: 3px #ced4db solid;
    color: #000;
    margin-bottom: 5px;
  }
}


.project {
  background: #fff;
  padding: 40px 60px 60px 60px;
  height: 800px;
  font-size: 1.3em;
  color: #9099a3;

  h3 {
    margin-bottom: 10px;
  }
}

.project-content {
  margin: 20px 0;
  line-height: 1.6em;
}


.looking_for {
  display: inline-block;
  background: #0088cc;
  border-radius: 3px;
  margin: 3px;
  padding: 5px 7px;
  color: #fff;
}

.top {
  padding-top: 20px;
}

#disqus_thread {
  padding-top: 40px;
}

.members {
  float: left;
  color: #000;
  font-size: 1.3em;
  img {
    margin-left: 5px;
    border-radius: 5px;
  }

  h3 {
    font-size: 1.0em;
    margin: -10px 0 0 0;
  }
}

.actions {
  float: right;
  width: 200px;
  text-align: right;
}

.intro {
  margin-left: 600px;
}

#title {
  font-family: proxima-nova, sans-serif;
  font-weight: 400;
  font-size: 31.5px;
  line-height: 1.2;
  height: auto;
  color: #000;
}
